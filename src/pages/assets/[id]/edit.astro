---
import AppLayout from '../../../layouts/AppLayout.astro';
import PageHeader from '../../../components/ui/PageHeader.astro';
import Card from '../../../components/ui/Card.astro';
import Button from '../../../components/ui/Button.astro';
import Input from '../../../components/ui/Input.astro';
import Select from '../../../components/ui/Select.astro';
import Textarea from '../../../components/ui/Textarea.astro';
import Alert from '../../../components/ui/Alert.astro';
import { supabase } from '../../../lib/supabase';
import { ASSET_CATEGORIES, ASSET_CONDITIONS, ASSET_STATUSES, formatDateForInput } from '../../../lib/utils';

const { id } = Astro.params;
const error = Astro.url.searchParams.get('error');

const { data: asset, error: fetchError } = await supabase
  .from('assets')
  .select('*')
  .eq('id', id)
  .single();

if (fetchError || !asset) {
  return Astro.redirect('/assets?error=not_found');
}

const categoryOptions = ASSET_CATEGORIES.map(c => ({ value: c, label: c }));
const conditionOptions = ASSET_CONDITIONS.map(c => ({ value: c.value, label: c.label }));
const statusOptions = ASSET_STATUSES.map(s => ({ value: s.value, label: s.label }));
---

<AppLayout title={`Edit ${asset.name}`}>
  <PageHeader title="Edit Asset" description={asset.name}>
    <Button href={`/assets/${id}`} variant="ghost" slot="actions">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Asset
    </Button>
  </PageHeader>
  
  {error && (
    <Alert type="error" class="mb-6" dismissible>
      {error === 'validation' ? 'Please fill in all required fields' : 'An error occurred. Please try again.'}
    </Alert>
  )}
  
  <Card>
    <form action="/api/assets/update" method="POST" class="space-y-6">
      <input type="hidden" name="id" value={asset.id} />
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Input
          name="name"
          label="Asset Name"
          placeholder="e.g., MacBook Pro 14"
          value={asset.name}
          required
        />
        
        <Select
          name="category"
          label="Category"
          options={categoryOptions}
          value={asset.category}
          required
        />
        
        <Input
          name="brand"
          label="Brand"
          placeholder="e.g., Apple"
          value={asset.brand || ''}
        />
        
        <Input
          name="model"
          label="Model"
          placeholder="e.g., M3 Pro"
          value={asset.model || ''}
        />
        
        <Input
          name="serial_number"
          label="Serial Number"
          placeholder="e.g., C02XG8FHJGH5"
          value={asset.serial_number || ''}
        />
        
        <Input
          name="location"
          label="Location"
          placeholder="e.g., Home Office"
          value={asset.location || ''}
        />
        
        <Input
          type="date"
          name="purchase_date"
          label="Purchase Date"
          value={formatDateForInput(asset.purchase_date)}
        />
        
        <Input
          type="number"
          name="purchase_price"
          label="Purchase Price"
          placeholder="0.00"
          value={asset.purchase_price || ''}
          min="0"
          step="0.01"
        />
        
        <Select
          name="condition"
          label="Condition"
          options={conditionOptions}
          value={asset.condition}
        />
        
        <Select
          name="status"
          label="Status"
          options={statusOptions}
          value={asset.status}
        />
      </div>
      
      <Textarea
        name="notes"
        label="Notes"
        placeholder="Additional notes about this asset..."
        value={asset.notes || ''}
        rows={3}
      />
      
      <div class="flex items-center justify-between pt-4 border-t border-surface-200">
        <form action="/api/assets/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this asset? This action cannot be undone.')">
          <input type="hidden" name="id" value={asset.id} />
          <Button type="submit" variant="danger">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Asset
          </Button>
        </form>
        <div class="flex items-center gap-4">
          <Button href={`/assets/${id}`} variant="ghost">Cancel</Button>
          <Button type="submit">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Save Changes
          </Button>
        </div>
      </div>
    </form>
  </Card>
</AppLayout>

