---
import AppLayout from '../../../layouts/AppLayout.astro';
import PageHeader from '../../../components/ui/PageHeader.astro';
import Card from '../../../components/ui/Card.astro';
import Button from '../../../components/ui/Button.astro';
import FileUploadWithCompression from '../../../components/ui/FileUploadWithCompression.astro';
import Alert from '../../../components/ui/Alert.astro';
import { supabase } from '../../../lib/supabase';
import { formatDate } from '../../../lib/utils';

const { id } = Astro.params;
const success = Astro.url.searchParams.get('success');
const error = Astro.url.searchParams.get('error');

const [{ data: asset }, { data: images }] = await Promise.all([
  supabase.from('assets').select('name').eq('id', id).single(),
  supabase.from('asset_images').select('*').eq('asset_id', id).order('created_at', { ascending: false }),
]);

if (!asset) {
  return Astro.redirect('/assets?error=not_found');
}
---

<AppLayout title={`Images - ${asset.name}`}>
  <PageHeader title="Manage Images" description={asset.name}>
    <Button href={`/assets/${id}`} variant="ghost" slot="actions">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Asset
    </Button>
  </PageHeader>
  
  {success && (
    <Alert type="success" class="mb-6" dismissible>
      Image uploaded successfully!
    </Alert>
  )}
  
  {error && (
    <Alert type="error" class="mb-6" dismissible>
      {error === 'upload_failed' ? 'Failed to upload image. Please try again.' : 'An error occurred.'}
    </Alert>
  )}
  
  <!-- Upload Form -->
  <Card class="mb-6">
    <h2 class="text-lg font-semibold text-surface-900 mb-4">Upload New Image</h2>
    <form action="/api/images/upload" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="asset_id" value={id} />
      <input type="hidden" name="image_type" value="asset" />
      
      <FileUploadWithCompression
        name="image"
        accept="image/*"
        maxWidth={1920}
        maxHeight={1920}
        quality={0.85}
      />
      
      <div class="mt-4 flex justify-end">
        <Button type="submit">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
          </svg>
          Upload Image
        </Button>
      </div>
    </form>
  </Card>
  
  <!-- Images Grid -->
  <Card>
    <h2 class="text-lg font-semibold text-surface-900 mb-4">
      Images ({images?.length || 0})
    </h2>
    
    {images && images.length > 0 ? (
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {images.map((image) => (
          <div class="group relative">
            <img
              src={image.image_url}
              alt={asset.name}
              class="w-full h-40 object-cover rounded-lg border border-surface-200"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center gap-2">
              <a
                href={image.image_url}
                target="_blank"
                class="p-2 bg-white rounded-lg text-surface-700 hover:bg-surface-100 transition-colors"
                title="View Full Size"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
              <form action="/api/images/delete" method="POST" onsubmit="return confirm('Delete this image?')">
                <input type="hidden" name="id" value={image.id} />
                <input type="hidden" name="asset_id" value={id} />
                <input type="hidden" name="image_url" value={image.image_url} />
                <button
                  type="submit"
                  class="p-2 bg-white rounded-lg text-red-600 hover:bg-red-50 transition-colors"
                  title="Delete"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </form>
            </div>
            <p class="mt-2 text-xs text-surface-500 text-center">
              {formatDate(image.created_at)}
            </p>
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 text-surface-500">
        <svg class="w-16 h-16 mx-auto text-surface-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <p class="text-lg font-medium">No images yet</p>
        <p class="text-sm">Upload your first image above</p>
      </div>
    )}
  </Card>
</AppLayout>
