---
import AppLayout from '../../layouts/AppLayout.astro';
import PageHeader from '../../components/ui/PageHeader.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Table from '../../components/ui/Table.astro';
import Badge from '../../components/ui/Badge.astro';
import Input from '../../components/ui/Input.astro';
import Select from '../../components/ui/Select.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import { supabase } from '../../lib/supabase';
import { formatCurrency, formatDate, getStatusColor, getConditionColor, ASSET_CATEGORIES, ASSET_STATUSES } from '../../lib/utils';

// Get query params for filtering
const searchQuery = Astro.url.searchParams.get('search') || '';
const categoryFilter = Astro.url.searchParams.get('category') || '';
const statusFilter = Astro.url.searchParams.get('status') || '';

// Build query
let query = supabase.from('assets').select('*').order('created_at', { ascending: false });

if (searchQuery) {
  query = query.ilike('name', `%${searchQuery}%`);
}
if (categoryFilter) {
  query = query.eq('category', categoryFilter);
}
if (statusFilter) {
  query = query.eq('status', statusFilter);
}

const { data: assets, error } = await query;

const categoryOptions = ASSET_CATEGORIES.map(c => ({ value: c, label: c }));
const statusOptions = ASSET_STATUSES.map(s => ({ value: s.value, label: s.label }));
---

<AppLayout title="Assets">
  <PageHeader title="Assets" description="Manage all your home assets">
    <Button href="/assets/new" slot="actions">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Asset
    </Button>
  </PageHeader>
  
  <!-- Filters -->
  <Card class="mb-6">
    <form method="GET" class="flex flex-col sm:flex-row gap-4">
      <div class="flex-1">
        <Input
          type="search"
          name="search"
          placeholder="Search assets..."
          value={searchQuery}
        />
      </div>
      <div class="w-full sm:w-48">
        <Select
          name="category"
          options={categoryOptions}
          value={categoryFilter}
          placeholder="All Categories"
        />
      </div>
      <div class="w-full sm:w-40">
        <Select
          name="status"
          options={statusOptions}
          value={statusFilter}
          placeholder="All Status"
        />
      </div>
      <Button type="submit" variant="secondary">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Filter
      </Button>
      {(searchQuery || categoryFilter || statusFilter) && (
        <Button href="/assets" variant="ghost">
          Clear
        </Button>
      )}
    </form>
  </Card>
  
  <!-- Assets Table -->
  {assets && assets.length > 0 ? (
    <Card padding="none">
      <Table>
        <thead>
          <tr>
            <th>Name</th>
            <th class="hidden sm:table-cell">Category</th>
            <th class="hidden md:table-cell">Brand</th>
            <th class="hidden lg:table-cell">Location</th>
            <th>Value</th>
            <th>Condition</th>
            <th>Status</th>
            <th class="text-right">Actions</th>
          </tr>
        </thead>
        <tbody>
          {assets.map((asset) => (
            <tr>
              <td>
                <a href={`/assets/${asset.id}`} class="font-medium text-primary-600 hover:text-primary-700" data-astro-prefetch>
                  {asset.name}
                </a>
                <p class="text-xs text-surface-500 sm:hidden">{asset.category}</p>
              </td>
              <td class="hidden sm:table-cell">{asset.category}</td>
              <td class="hidden md:table-cell">{asset.brand || '-'}</td>
              <td class="hidden lg:table-cell">{asset.location || '-'}</td>
              <td>{formatCurrency(asset.purchase_price)}</td>
              <td>
                <Badge class={getConditionColor(asset.condition)}>
                  {asset.condition}
                </Badge>
              </td>
              <td>
                <Badge class={getStatusColor(asset.status)}>
                  {asset.status}
                </Badge>
              </td>
              <td class="text-right">
                <div class="flex items-center justify-end gap-2">
                  <a
                    href={`/assets/${asset.id}`}
                    class="p-2 text-surface-400 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition-colors"
                    title="View"
                    data-astro-prefetch
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  </a>
                  <a
                    href={`/assets/${asset.id}/edit`}
                    class="p-2 text-surface-400 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-colors"
                    title="Edit"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </a>
                  <form action="/api/assets/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this asset?')">
                    <input type="hidden" name="id" value={asset.id} />
                    <button
                      type="submit"
                      class="p-2 text-surface-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                      title="Delete"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </Table>
    </Card>
  ) : (
    <Card>
      <EmptyState
        title="No assets found"
        description={searchQuery || categoryFilter || statusFilter 
          ? "Try adjusting your filters" 
          : "Start by adding your first asset"}
        icon="assets"
      >
        <Button href="/assets/new">Add Your First Asset</Button>
      </EmptyState>
    </Card>
  )}
</AppLayout>

