---
import AppLayout from '../layouts/AppLayout.astro';
import PageHeader from '../components/ui/PageHeader.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import Input from '../components/ui/Input.astro';
import Alert from '../components/ui/Alert.astro';

const user = Astro.locals.user;
const success = Astro.url.searchParams.get('success');
const error = Astro.url.searchParams.get('error');
---

<AppLayout title="Settings">
  <PageHeader title="Settings" description="Manage your account settings" />
  
  {success && (
    <Alert type="success" class="mb-6" dismissible>
      {success === 'password' ? 'Password updated successfully!' : 
       success === 'profile' ? 'Profile updated successfully!' : 
       'Changes saved successfully!'}
    </Alert>
  )}
  
  {error && (
    <Alert type="error" class="mb-6" dismissible>
      {error === 'password_mismatch' ? 'New passwords do not match' :
       error === 'password_short' ? 'Password must be at least 6 characters' :
       error === 'invalid_email' ? 'Please enter a valid email address' :
       'An error occurred. Please try again.'}
    </Alert>
  )}
  
  <div class="space-y-6">
    <!-- Profile Section -->
    <Card>
      <h2 class="text-lg font-semibold text-surface-900 mb-4">Profile</h2>
      <form action="/api/settings/profile" method="POST" class="space-y-4">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white text-2xl font-medium">
            {user?.email?.charAt(0).toUpperCase() || 'U'}
          </div>
          <div>
            <p class="font-medium text-surface-900">{user?.email?.split('@')[0]}</p>
            <p class="text-sm text-surface-500">{user?.email}</p>
          </div>
        </div>
        
        <Input
          type="email"
          name="email"
          label="Email Address"
          value={user?.email || ''}
          disabled
        />
        
        <p class="text-sm text-surface-500">
          Email changes require verification. Contact support to change your email.
        </p>
      </form>
    </Card>
    
    <!-- Change Password Section -->
    <Card>
      <h2 class="text-lg font-semibold text-surface-900 mb-4">Change Password</h2>
      <form action="/api/settings/password" method="POST" class="space-y-4">
        <Input
          type="password"
          name="new_password"
          label="New Password"
          placeholder="••••••••"
          required
        />
        
        <Input
          type="password"
          name="confirm_password"
          label="Confirm New Password"
          placeholder="••••••••"
          required
        />
        
        <div class="pt-4">
          <Button type="submit">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
            </svg>
            Update Password
          </Button>
        </div>
      </form>
    </Card>
    
    <!-- Account Actions -->
    <Card>
      <h2 class="text-lg font-semibold text-surface-900 mb-4">Account Actions</h2>
      
      <div class="space-y-4">
        <div class="flex items-center justify-between py-3 border-b border-surface-200">
          <div>
            <p class="font-medium text-surface-900">Sign Out</p>
            <p class="text-sm text-surface-500">Sign out of your account on this device</p>
          </div>
          <form action="/api/auth/logout" method="POST">
            <Button type="submit" variant="secondary">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Sign Out
            </Button>
          </form>
        </div>
        
        <div class="py-3">
          <p class="font-medium text-surface-900">App Information</p>
          <div class="mt-2 space-y-1 text-sm text-surface-500">
            <p>Version: 1.0.0</p>
            <p>Built with Astro + Supabase</p>
          </div>
        </div>
      </div>
    </Card>
    
    <!-- Data Summary -->
    <Card>
      <h2 class="text-lg font-semibold text-surface-900 mb-4">Data Summary</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4" id="data-summary">
        <div class="text-center p-4 bg-surface-50 rounded-lg">
          <p class="text-2xl font-bold text-surface-900" id="total-assets">-</p>
          <p class="text-sm text-surface-500">Assets</p>
        </div>
        <div class="text-center p-4 bg-surface-50 rounded-lg">
          <p class="text-2xl font-bold text-surface-900" id="total-services">-</p>
          <p class="text-sm text-surface-500">Services</p>
        </div>
        <div class="text-center p-4 bg-surface-50 rounded-lg">
          <p class="text-2xl font-bold text-surface-900" id="total-warranties">-</p>
          <p class="text-sm text-surface-500">Warranties</p>
        </div>
        <div class="text-center p-4 bg-surface-50 rounded-lg">
          <p class="text-2xl font-bold text-surface-900" id="total-sales">-</p>
          <p class="text-sm text-surface-500">Sales</p>
        </div>
      </div>
    </Card>
  </div>
</AppLayout>

<script>
  // Fetch data summary
  async function loadDataSummary() {
    try {
      const response = await fetch('/api/settings/summary');
      const data = await response.json();
      
      const assetsEl = document.getElementById('total-assets');
      const servicesEl = document.getElementById('total-services');
      const warrantiesEl = document.getElementById('total-warranties');
      const salesEl = document.getElementById('total-sales');
      if (assetsEl) assetsEl.textContent = String(data.assets || 0);
      if (servicesEl) servicesEl.textContent = String(data.services || 0);
      if (warrantiesEl) warrantiesEl.textContent = String(data.warranties || 0);
      if (salesEl) salesEl.textContent = String(data.sales || 0);
    } catch (error) {
      console.error('Failed to load data summary:', error);
    }
  }
  
  loadDataSummary();
</script>

