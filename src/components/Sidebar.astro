---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Dashboard', icon: 'dashboard' },
  { href: '/assets', label: 'Assets', icon: 'inventory' },
  { href: '/services', label: 'Services', icon: 'build' },
  { href: '/warranties', label: 'Warranties', icon: 'verified_user' },
  { href: '/sales', label: 'Sales', icon: 'point_of_sale' },
  { href: '/settings', label: 'Settings', icon: 'settings' },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<aside 
  id="sidebar"
  class="fixed top-0 left-0 z-40 w-64 h-screen bg-surface-900 text-white transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out"
>
  <!-- Logo -->
  <a href="/" class="flex items-center gap-3 px-6 py-5 border-b border-surface-700 hover:bg-surface-800 transition-colors" data-astro-prefetch>
    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
    </div>
    <div>
      <h1 class="text-lg font-semibold tracking-tight">Asset Tracker</h1>
      <p class="text-xs text-surface-400">Home Management</p>
    </div>
  </a>
  
  <!-- Navigation -->
  <nav class="px-4 py-6">
    <ul class="space-y-1">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            data-astro-prefetch
            class:list={[
              'flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium transition-all duration-200',
              isActive(item.href)
                ? 'bg-primary-600 text-white shadow-lg shadow-primary-600/25'
                : 'text-surface-300 hover:bg-surface-800 hover:text-white',
            ]}
          >
            <span class="material-icon w-5 h-5 flex items-center justify-center">
              {item.icon === 'dashboard' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                </svg>
              )}
              {item.icon === 'inventory' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              )}
              {item.icon === 'build' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              )}
              {item.icon === 'verified_user' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              )}
              {item.icon === 'point_of_sale' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
              {item.icon === 'settings' && (
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                </svg>
              )}
            </span>
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
  
  <!-- Bottom section -->
  <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-surface-700">
    <div class="flex items-center gap-3 px-2 py-2 text-surface-400 text-xs">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span>Personal Asset Manager</span>
    </div>
  </div>
</aside>

<script>
  // Update active state after View Transitions navigation
  function updateActiveState() {
    const currentPath = window.location.pathname;
    const links = document.querySelectorAll('#sidebar nav a');
    
    links.forEach((link) => {
      const href = link.getAttribute('href');
      const isActive = href === '/' 
        ? currentPath === '/' 
        : currentPath.startsWith(href || '');
      
      if (isActive) {
        link.classList.remove('text-surface-300', 'hover:bg-surface-800', 'hover:text-white');
        link.classList.add('bg-primary-600', 'text-white', 'shadow-lg', 'shadow-primary-600/25');
      } else {
        link.classList.remove('bg-primary-600', 'text-white', 'shadow-lg', 'shadow-primary-600/25');
        link.classList.add('text-surface-300', 'hover:bg-surface-800', 'hover:text-white');
      }
    });
  }
  
  // Update on View Transitions navigation
  document.addEventListener('astro:after-swap', updateActiveState);
</script>
