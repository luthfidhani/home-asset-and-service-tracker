---
interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
}

const { class: className = '', padding = 'md' } = Astro.props;

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};
---

<div class:list={[
  'bg-white rounded-xl border border-surface-200 shadow-sm',
  paddingClasses[padding],
  className,
]}>
  <slot />
</div>

